<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2017-02-03-01" author="ushalamitski">
        <comment>Creates table 'status'</comment>
        <sql>
            CREATE TABLE application.status(
                id bigserial NOT NULL,
                name character varying NOT NULL,
                CONSTRAINT status_pk PRIMARY KEY (id)
            )
        </sql>
        <rollback>
            DROP TABLE application.status
        </rollback>
    </changeSet>

</databaseChangeLog>
